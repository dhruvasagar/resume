mixin education(course, college, specialization, location, score)
  li.list-group-item
    .course
      strong= course
    .institute
      strong= college
    .specialization
      | Specialization&colon; 
      strong= specialization
    .location
      span.glyphicon.glyphicon-map-marker
      | #{location}
    i.fa.fa-trophy
    | Secured 
    strong #{score}&percnt; 
    if block
      block

.educations.panel.panel-default
  .panel-heading
    a#educations
    h4.panel-title
      i.fa.fa-book
      span.title Education
  ul.list-group
    +education('Bechelor of Technology', 'College Of Engineering Roorkee', 'Information Technology', 'Roorkee, Uttranchal', 77.9)
      | overall with
      strong Honors
    +education('Intermediate', 'Rajhans Vidyalaya', 'Science', 'Mumbai, Maharastra', 88.20)
    +education('Matriculate', 'Rajhans Vidyalaya', 'PCM + Computers', 'Mumbai, Maharashtra', 84.80)
